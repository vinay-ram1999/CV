% SECTION FORMATTING 
\RequirePackage[nostruts]{titlesec}
\titlespacing*{\section}{0em}{0em}{0em}
\titleformat{\section}{\color{highlight} \scshape \raggedright \large}{}{0em}{}[\vspace{-0.85em}\hrulefill]

